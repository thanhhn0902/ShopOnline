    <script>
        $(document).ready(function () {
            $('#btn-Delete > a').click(function (e) {
                $('#get-Dellink > a').removeAttr('href');
                var href = $(this).data('href');
                $('#get-Dellink > a').attr('href', href);
                e.preventDefault();
            })
        });
    </script>
}