    <script>
        $(document).ready(function () {
            $('#btn-Delete').click(function (e) {
                var url = $('#modal-default').data('url');
                $.get(url, function (data) {
                    $('#modal-default').html(data);
                    $('#modal-default').modal('show');
                });
            });
        });
    </script>
